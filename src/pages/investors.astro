---
import Layout from '../layouts/Layout.astro';
import { siteConfig, investorsPageFull } from '../config/content';
---

<Layout title={`${siteConfig.name} - ${siteConfig.tagline}`}>
  
  <!-- Hero Section -->
  <section class="pt-32 pb-20 lg:pt-40 lg:pb-24 hero-section">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <div class="hero-content">
          <p class="text-[#0eb4b3] text-sm font-mono font-bold tracking-[0.15em] uppercase mb-6 flex items-center">
            <span class="w-2 h-2 bg-[#0eb4b3] rounded-sm inline-block mr-2"></span>
            {investorsPageFull.hero.eyebrow}
          </p>
          <h1 class="text-5xl lg:text-6xl font-medium mb-6 text-[#0b1430] tracking-tight leading-[1.1]">
            {investorsPageFull.hero.headline}
          </h1>
          <p class="text-xl text-[#636562] mb-8 leading-relaxed font-normal">
            {investorsPageFull.hero.description}
          </p>
          <a href="/contact" class="inline-flex items-center justify-center bg-[#0eb4b3] hover:bg-[#0ca5a4] text-white px-6 py-3 rounded-lg font-medium text-base tracking-wide transition-all duration-200 shadow-xl shadow-teal-500/20 hover:translate-y-[-1px]">
            {investorsPageFull.hero.cta}
          </a>
        </div>
        
        <!-- Visualization: Redesigned Blue Box -->
        <div class="relative w-full aspect-[4/3] lg:aspect-square xl:aspect-[4/3] bg-[#0B1121] rounded-2xl border border-slate-800/80 shadow-2xl overflow-hidden group hero-visual">
          
          <!-- Background Ambient Glow -->
          <div class="absolute -top-[20%] -right-[10%] w-[80%] h-[80%] bg-teal-900/20 blur-[100px] rounded-full pointer-events-none"></div>
          <div class="absolute bottom-0 left-0 w-full h-1/2 bg-gradient-to-t from-teal-900/10 to-transparent pointer-events-none"></div>

          <!-- Animated Grid Background -->
          <div class="absolute inset-0 opacity-20" style="background-image: linear-gradient(#1e293b 1px, transparent 1px), linear-gradient(to right, #1e293b 1px, transparent 1px); background-size: 40px 40px;">
          </div>

          <!-- Main Visualization Container -->
          <div class="absolute inset-0 flex flex-col items-center justify-center">
            
            <!-- Top Label -->
            <div class="absolute top-8 left-0 right-0 flex justify-center">
               <div class="px-3 py-1 rounded-full bg-slate-900/80 border border-slate-700/50 backdrop-blur-sm flex items-center gap-2">
                  <div class="w-1.5 h-1.5 bg-teal-400 rounded-full animate-pulse"></div>
                  <span class="text-[10px] font-mono uppercase tracking-widest text-teal-400 font-medium">Deal Flow Analysis</span>
               </div>
            </div>

            <!-- Central Gauge Assembly -->
            <div class="relative w-64 h-64 flex items-center justify-center">
              
              <!-- Outer Rotating Ring -->
              <div class="absolute inset-0 rounded-full border border-dashed border-slate-700 opacity-40 animate-[spin_10s_linear_infinite]"></div>
              
              <!-- Inner Pulsing Ring -->
              <div class="absolute inset-4 rounded-full border border-slate-800 bg-slate-900/50 backdrop-blur-sm shadow-[0_0_40px_rgba(20,184,166,0.1)]"></div>
              
              <!-- Progress Arc (SVG) -->
              <svg class="absolute inset-0 w-full h-full -rotate-90 pointer-events-none">
                <circle cx="50%" cy="50%" r="90" fill="none" stroke="#1e293b" stroke-width="2"></circle>
                <circle cx="50%" cy="50%" r="90" fill="none" stroke="#14b8a6" stroke-width="2" stroke-dasharray="565" stroke-dashoffset="12" stroke-linecap="round" class="drop-shadow-[0_0_8px_rgba(20,184,166,0.5)]"></circle>
              </svg>

              <!-- Central Content -->
              <div class="relative z-10 text-center flex flex-col items-center">
                <span class="text-6xl font-medium tracking-tighter text-white tabular-nums">98.2<span class="text-3xl text-slate-500">%</span></span>
                <span class="text-xs text-slate-400 mt-2 font-medium tracking-wide flex items-center gap-1.5">
                  <svg xmlns="http://www.w3.org/2000/svg" class="w-3.5 h-3.5 text-teal-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                    <path d="m9 12 2 2 4-4"></path>
                  </svg>
                  Data Accuracy
                </span>
              </div>

              <!-- Orbiting Data Nodes -->
              <div class="absolute w-full h-full animate-[spin_15s_linear_infinite_reverse]">
                <div class="absolute top-0 left-1/2 -translate-x-1/2 -translate-y-1.5 w-3 h-3 bg-slate-900 border border-teal-500/50 rounded-full shadow-[0_0_10px_rgba(20,184,166,0.5)]"></div>
              </div>
            </div>

            <!-- Floating Metric Cards (Decorations) -->
            <div class="absolute bottom-12 w-full px-12 flex justify-between items-end">
              <!-- Left Metric -->
              <div class="group flex items-center gap-3 p-2 pr-4 rounded-lg bg-slate-800/40 border border-slate-700/50 backdrop-blur-md transition-all hover:bg-slate-800/60 animate-[float-vertical_4s_ease-in-out_infinite]">
                <div class="w-8 h-8 rounded bg-teal-500/10 flex items-center justify-center border border-teal-500/20">
                  <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 text-teal-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path>
                    <circle cx="9" cy="7" r="4"></circle>
                    <path d="M22 21v-2a4 4 0 0 0-3-3.87"></path>
                    <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                  </svg>
                </div>
                <div class="flex flex-col">
                  <span class="text-[10px] uppercase tracking-wider text-slate-400 font-semibold">Talent Map</span>
                  <span class="text-xs text-white font-medium">Verified</span>
                </div>
              </div>

              <!-- Right Metric -->
              <div class="group flex items-center gap-3 p-2 pr-4 rounded-lg bg-slate-800/40 border border-slate-700/50 backdrop-blur-md transition-all hover:bg-slate-800/60 animate-[float-vertical_5s_ease-in-out_infinite_reverse]">
                <div class="w-8 h-8 rounded bg-teal-500/10 flex items-center justify-center border border-teal-500/20">
                  <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 text-teal-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <polyline points="22 12 18 12 15 21 9 3 6 12 2 12"></polyline>
                  </svg>
                </div>
                <div class="flex flex-col">
                  <span class="text-[10px] uppercase tracking-wider text-slate-400 font-semibold">Comp Saturation</span>
                  <span class="text-xs text-white font-medium">Live Feed</span>
                </div>
              </div>
            </div>
          </div>

          <!-- Scanning Overlay Effect -->
          <div class="absolute inset-0 w-full h-full pointer-events-none opacity-20">
            <div class="w-full h-20 bg-gradient-to-b from-transparent via-teal-400/30 to-transparent animate-[scanline_3s_linear_infinite]"></div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Horizontal Separator -->
  <hr class="border-0 h-px bg-gray-200" />

  <!-- PE Reality -->
  <section class="py-20 lg:py-24 bg-gray-50 text-navy-900 fade-in-section">
    <div class="max-w-4xl mx-auto px-6 lg:px-8">
      <p class="text-[#0eb4b3] text-sm font-mono font-bold tracking-[0.15em] uppercase mb-6 flex items-center">
        <span class="w-1.5 h-1.5 bg-[#0eb4b3] rounded-sm inline-block mr-2"></span>
        {investorsPageFull.peReality.eyebrow}
      </p>
      <h2 class="text-3xl lg:text-4xl font-medium mb-6 text-[#0b1530] leading-tight tracking-tight">
        {investorsPageFull.peReality.headline}
      </h2>
      <p class="text-lg text-[#636562] mb-8 leading-relaxed">
        {investorsPageFull.peReality.description}
      </p>
      
      <ul class="space-y-4 mb-8">
        {investorsPageFull.peReality.challenges.map((challenge) => (
          <li class="flex items-center gap-3">
            <span class="text-[#0eb4b3] text-xs leading-none">‚óè</span>
            <span class="text-[#636562] leading-relaxed">{challenge}</span>
          </li>
        ))}
      </ul>

      <div class="space-y-2 mb-8">
        <p class="text-xl font-bold text-[#0b1530]">{investorsPageFull.peReality.callout1}</p>
      </div>

      <p class="text-[#636562] leading-relaxed">
        {investorsPageFull.peReality.callout2}
      </p>
    </div>
  </section>

  <!-- Horizontal Separator -->
  <hr class="border-0 h-px bg-gray-200" />

  <!-- What VetPulse Unlocks -->
  <section class="py-20 lg:py-24 fade-in-section">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <div class="mb-16">
        <p class="text-[#0eb4b3] text-sm font-mono font-bold tracking-[0.15em] uppercase mb-6 flex items-center">
          <span class="w-2 h-2 bg-[#0eb4b3] inline-block mr-2"></span>
          {investorsPageFull.unlocks.eyebrow}
        </p>
        <h2 class="text-3xl lg:text-4xl font-bold text-[#0b1530] leading-tight">
          {investorsPageFull.unlocks.headline}
        </h2>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        {investorsPageFull.unlocks.cards.map((card) => (
          <div class="bg-gray-50 border border-gray-200 p-8 rounded-lg">
            <h3 class="text-xl font-bold mb-4 text-navy-900">{card.title}</h3>
            <p class="text-[#636562] text-sm leading-relaxed">{card.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Horizontal Separator -->
  <hr class="border-0 h-px bg-gray-200" />

  <!-- Built for Diligence -->
  <section class="py-20 lg:py-24 bg-white text-navy-900 fade-in-section">
    <div class="max-w-4xl mx-auto px-6 lg:px-8">
      <p class="text-[#0eb4b3] text-sm font-mono font-bold tracking-[0.15em] uppercase mb-6 flex items-center">
        <span class="w-2 h-2 bg-[#0eb4b3] inline-block mr-2"></span>
        {investorsPageFull.diligence.eyebrow}
      </p>
      <h2 class="text-3xl lg:text-4xl font-bold mb-8 text-[#0b1530] leading-tight">
        {investorsPageFull.diligence.headline}
      </h2>
      
      <div class="space-y-6">
        {investorsPageFull.diligence.content.map((item) => (
          <p class="text-lg text-[#636562] leading-relaxed">
            {item.paragraph}
          </p>
        ))}
      </div>
    </div>
  </section>

  <!-- Horizontal Separator -->
  <hr class="border-0 h-px bg-gray-200" />

  <!-- Proof Section -->
  <section class="py-20 lg:py-24 bg-gray-50 text-navy-900 fade-in-section">
    <div class="max-w-4xl mx-auto px-6 lg:px-8">
      <p class="text-[#0eb4b3] text-sm font-mono font-bold tracking-[0.15em] uppercase mb-6 flex items-center">
        <span class="w-2 h-2 bg-[#0eb4b3] inline-block mr-2"></span>
        {investorsPageFull.proof.eyebrow}
      </p>
      <h2 class="text-3xl lg:text-4xl font-bold mb-6 text-[#0b1530] leading-tight">
        {investorsPageFull.proof.headline}
      </h2>
      <p class="text-lg text-[#636562] leading-relaxed">
        {investorsPageFull.proof.description}
      </p>
    </div>
  </section>

  <!-- Horizontal Separator -->
  <hr class="border-0 h-px bg-gray-200" />

  <!-- CTA Section -->
  <section class="py-20 lg:py-24 bg-[#0b1530] fade-in-section">
    <div class="max-w-4xl mx-auto px-6 lg:px-8 text-center">
      <h2 class="text-3xl lg:text-4xl font-bold mb-6 text-white leading-tight">
        {investorsPageFull.cta.headline}
      </h2>
      <p class="text-lg text-[#d4d4d5] mb-8 leading-relaxed">
        {investorsPageFull.cta.description}
      </p>
      <a href="/contact" class="bg-[#0eb4b3] hover:bg-[#0ca5a4] text-white px-8 py-4 rounded-sm font-semibold text-base tracking-wide transition-all duration-200 inline-block">
        {investorsPageFull.cta.buttonText}
      </a>
    </div>
  </section>

</Layout>

<style>
  html {
    scroll-behavior: smooth;
  }
  
  /* Hero section initial load animation */
  .hero-section {
    opacity: 0;
    animation: fadeInUp 0.8s ease-out forwards;
  }
  
  .hero-content {
    opacity: 0;
    animation: fadeInUp 0.8s ease-out 0.2s forwards;
  }
  
  .hero-visual {
    opacity: 0;
    animation: fadeInUp 0.8s ease-out 0.4s forwards;
  }
  
  /* Scroll-triggered fade-in for other sections */
  .fade-in-section {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.8s ease-out, transform 0.8s ease-out;
  }
  
  .fade-in-section.is-visible {
    opacity: 1;
    transform: translateY(0);
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  @keyframes scanline {
    0% { transform: translateY(-100%); }
    100% { transform: translateY(200%); }
  }
  
  @keyframes float-vertical {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }
</style>

<script>
  // Intersection Observer for scroll-triggered animations
  document.addEventListener('DOMContentLoaded', () => {
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -100px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add('is-visible');
        }
      });
    }, observerOptions);

    // Observe all fade-in sections
    const fadeInSections = document.querySelectorAll('.fade-in-section');
    fadeInSections.forEach((section) => {
      observer.observe(section);
    });
  });
</script>
