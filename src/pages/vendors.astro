---
import Layout from '../layouts/Layout.astro';
import { siteConfig, vendorsPageFull } from '../config/content';
---

<Layout title={`${siteConfig.name} - ${siteConfig.tagline}`}>
  
  <!-- Hero Section -->
  <section class="pt-32 pb-20 lg:pt-40 lg:pb-32">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <div>
          <p class="text-cyan-400 text-xs font-mono tracking-[0.15em] uppercase mb-4">
            <span class="w-1.5 h-1.5 bg-cyan-500 rounded-full inline-block mr-2"></span>
            {vendorsPageFull.hero.eyebrow}
          </p>
          <h1 class="text-4xl lg:text-5xl font-bold mb-6">
            {vendorsPageFull.hero.headline}
          </h1>
          <p class="text-xl text-gray-400 mb-8 leading-relaxed">
            {vendorsPageFull.hero.description}
          </p>
          <a href="/contact" class="bg-cyan-500 hover:bg-cyan-600 text-navy-900 px-6 py-3 rounded-sm font-semibold text-sm tracking-wide transition-all duration-200 inline-block">
            {vendorsPageFull.hero.cta}
          </a>
        </div>
        
        <!-- Visualization -->
        <div class="bg-navy-900 border border-cyan-500/20 rounded-lg p-12 flex flex-col items-center justify-center min-h-100">
          <div class="text-center">
            <p class="text-cyan-400 text-xs font-mono tracking-wider uppercase mb-8">
              {vendorsPageFull.hero.visualization.label}
            </p>
            <div class="text-5xl lg:text-6xl font-bold mb-4">
              {vendorsPageFull.hero.visualization.value}
            </div>
            <p class="text-gray-400 text-sm">
              {vendorsPageFull.hero.visualization.subtitle}
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Vendor Reality -->
  <section class="py-20 lg:py-32 bg-gray-50 text-navy-900">
    <div class="max-w-4xl mx-auto px-6 lg:px-8">
      <p class="text-cyan-600 text-xs font-mono tracking-[0.15em] uppercase mb-4">
        <span class="w-1.5 h-1.5 bg-cyan-600 rounded-full inline-block mr-2"></span>
        {vendorsPageFull.vendorReality.eyebrow}
      </p>
      <h2 class="text-3xl lg:text-4xl font-bold mb-6">
        {vendorsPageFull.vendorReality.headline}
      </h2>
      <p class="text-lg text-gray-600 mb-8 leading-relaxed">
        {vendorsPageFull.vendorReality.description}
      </p>
      
      <ul class="space-y-4 mb-12">
        {vendorsPageFull.vendorReality.challenges.map((challenge) => (
          <li class="flex items-start gap-3">
            <span class="text-cyan-600 text-xl mt-1">‚óè</span>
            <span class="text-gray-700 leading-relaxed">{challenge}</span>
          </li>
        ))}
      </ul>

      <div class="space-y-2 mb-8">
        <p class="text-xl font-bold">{vendorsPageFull.vendorReality.callout1}</p>
      </div>

      <p class="text-gray-600 leading-relaxed">
        {vendorsPageFull.vendorReality.callout2}
      </p>
    </div>
  </section>

  <!-- What VetPulse Unlocks -->
  <section class="py-20 lg:py-32">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <div class="text-center mb-16">
        <p class="text-cyan-400 text-xs font-mono tracking-[0.15em] uppercase mb-4">
          <span class="w-1.5 h-1.5 bg-cyan-500 rounded-full inline-block mr-2"></span>
          {vendorsPageFull.unlocks.eyebrow}
        </p>
        <h2 class="text-3xl lg:text-4xl font-bold">
          {vendorsPageFull.unlocks.headline}
        </h2>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        {vendorsPageFull.unlocks.cards.map((card) => (
          <div class="bg-gray-50 border border-gray-200 p-8 rounded-lg hover:border-cyan-500/30 transition-all duration-300">
            <h3 class="text-xl font-bold mb-4 text-navy-900">{card.title}</h3>
            <p class="text-gray-600 text-sm leading-relaxed">{card.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- GTM Fit -->
  <section class="py-20 lg:py-32 bg-white text-navy-900">
    <div class="max-w-4xl mx-auto px-6 lg:px-8">
      <p class="text-cyan-600 text-xs font-mono tracking-[0.15em] uppercase mb-4">
        <span class="w-1.5 h-1.5 bg-cyan-600 rounded-full inline-block mr-2"></span>
        {vendorsPageFull.gtmFit.eyebrow}
      </p>
      <h2 class="text-3xl lg:text-4xl font-bold mb-8">
        {vendorsPageFull.gtmFit.headline}
      </h2>
      
      <div class="space-y-6">
        {vendorsPageFull.gtmFit.content.map((item) => (
          <p class="text-lg text-gray-600 leading-relaxed">
            {item.paragraph}
          </p>
        ))}
      </div>
    </div>
  </section>

  <!-- Proof Section -->
  <section class="py-20 lg:py-32 bg-gray-50 text-navy-900">
    <div class="max-w-4xl mx-auto px-6 lg:px-8">
      <p class="text-cyan-600 text-xs font-mono tracking-[0.15em] uppercase mb-4">
        <span class="w-1.5 h-1.5 bg-cyan-600 rounded-full inline-block mr-2"></span>
        {vendorsPageFull.proof.eyebrow}
      </p>
      <h2 class="text-2xl lg:text-3xl font-bold mb-6">
        {vendorsPageFull.proof.headline}
      </h2>
      <p class="text-lg text-gray-600 leading-relaxed">
        {vendorsPageFull.proof.description}
      </p>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 lg:py-32 bg-navy-900">
    <div class="max-w-4xl mx-auto px-6 lg:px-8 text-center">
      <h2 class="text-3xl lg:text-4xl font-bold mb-6">
        {vendorsPageFull.cta.headline}
      </h2>
      <p class="text-xl text-gray-400 mb-8">
        {vendorsPageFull.cta.description}
      </p>
      <a href="/contact" class="bg-cyan-500 hover:bg-cyan-600 text-navy-900 px-8 py-4 rounded-sm font-semibold text-base tracking-wide transition-all duration-200 inline-block">
        {vendorsPageFull.cta.buttonText}
      </a>
    </div>
  </section>

</Layout>
