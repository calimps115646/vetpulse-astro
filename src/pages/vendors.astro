---
import Layout from '../layouts/Layout.astro';
import { siteConfig, vendorsPageFull } from '../config/content';
---

<Layout title={`${siteConfig.name} - ${siteConfig.tagline}`}>
  
  <!-- Hero Section -->
  <section class="pt-32 pb-20 lg:pt-40 lg:pb-24 hero-section">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <div class="hero-content">
          <p class="text-[#0eb4b3] text-sm font-mono font-bold tracking-[0.15em] uppercase mb-6 flex items-center">
            <span class="w-2 h-2 bg-[#0eb4b3] rounded-sm inline-block mr-2"></span>
            {vendorsPageFull.hero.eyebrow}
          </p>
          <h1 class="text-5xl lg:text-6xl font-medium mb-6 text-[#0b1430] tracking-tight leading-[1.1]">
            {vendorsPageFull.hero.headline}
          </h1>
          <p class="text-lg lg:text-xl text-[#636562] mb-8 leading-relaxed font-normal">
            {vendorsPageFull.hero.description}
          </p>
          <a href="/contact" class="inline-flex items-center justify-center bg-[#0eb4b3] hover:bg-[#0ca5a4] text-white px-6 py-3 rounded-lg font-medium text-base tracking-wide transition-all duration-200 shadow-xl shadow-teal-500/20 hover:translate-y-[-1px]">
            {vendorsPageFull.hero.cta}
          </a>
        </div>
        
        <!-- Visualization: Redesigned Blue Box -->
        <div class="relative w-full aspect-[4/3] bg-[#0F172A] rounded-2xl overflow-hidden shadow-2xl border border-slate-800/50 group hero-visual">
          
          <!-- 1. Base Grid Layer -->
          <div class="absolute inset-0 bg-[linear-gradient(rgba(255,255,255,0.03)_1px,transparent_1px),linear-gradient(90deg,rgba(255,255,255,0.03)_1px,transparent_1px)] bg-[size:40px_40px] [mask-image:radial-gradient(ellipse_at_center,black_50%,transparent_100%)]"></div>

          <!-- 2. Ambient Glow (Moving) -->
          <div class="absolute top-[-50%] left-[-50%] w-[200%] h-[200%] bg-[radial-gradient(circle_at_center,rgba(20,184,166,0.08),transparent_40%)] animate-[spin_10s_linear_infinite]"></div>

          <!-- 3. Dynamic "Heatmap" Nodes -->
          <div class="absolute top-[30%] left-[20%] w-1 h-1 bg-teal-400 rounded-full animate-ping [animation-duration:3s]"></div>
          <div class="absolute top-[60%] left-[75%] w-1 h-1 bg-teal-400 rounded-full animate-ping [animation-delay:1s] [animation-duration:4s]"></div>
          <div class="absolute bottom-[25%] right-[30%] w-1.5 h-1.5 bg-teal-500 rounded-full opacity-60 animate-pulse"></div>
          <div class="absolute top-[20%] right-[20%] w-1 h-1 bg-teal-500/50 rounded-full"></div>
          
          <!-- 4. Center Content Wrapper -->
          <div class="absolute inset-0 flex flex-col items-center justify-center z-10">
            
            <!-- Top Label -->
            <div class="mb-5 flex items-center gap-2 opacity-0 animate-[fadeIn_1s_ease-out_forwards]">
              <span class="text-[10px] font-mono font-medium text-teal-400 tracking-wider uppercase">Territory_Heatmap_V4</span>
            </div>

            <!-- Main Status with Glow -->
            <div class="relative">
              <div class="absolute -inset-4 bg-teal-500/20 blur-xl rounded-full opacity-50 animate-pulse"></div>
              <h2 class="relative text-4xl lg:text-5xl font-semibold text-white tracking-tight drop-shadow-sm">Active</h2>
            </div>

            <!-- Subtitle -->
            <div class="mt-3 flex items-center gap-2">
               <div class="w-1 h-1 bg-slate-500 rounded-full"></div>
               <span class="text-sm text-slate-400 font-mono tracking-wide">Coverage Optimization</span>
               <div class="w-1 h-1 bg-slate-500 rounded-full"></div>
            </div>
          </div>

          <!-- 5. Scanning Line Effect -->
          <div class="absolute inset-0 bg-gradient-to-b from-transparent via-teal-500/[0.03] to-transparent w-full h-[50%] -translate-y-full animate-[scan_4s_linear_infinite] pointer-events-none"></div>

          <!-- 6. Bottom UI Accents -->
          <div class="absolute bottom-6 left-6 right-6 flex justify-between items-end opacity-60">
            <div class="flex gap-1">
              <div class="w-0.5 h-3 bg-teal-500/40"></div>
              <div class="w-0.5 h-5 bg-teal-500/60"></div>
              <div class="w-0.5 h-2 bg-teal-500/30"></div>
            </div>
            <div class="text-[10px] text-slate-500 font-mono">SYNCED 14ms</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Horizontal Separator -->
  <hr class="border-0 h-px bg-gray-200" />

  <!-- Vendor Reality -->
  <section class="py-20 lg:py-24 bg-gray-50 text-navy-900 fade-in-section">
    <div class="max-w-4xl mx-auto px-6 lg:px-8">
      <p class="text-[#0eb4b3] text-sm font-mono font-bold tracking-[0.15em] uppercase mb-6 flex items-center">
        <span class="w-1.5 h-1.5 bg-[#0eb4b3] rounded-sm inline-block mr-2"></span>
        {vendorsPageFull.vendorReality.eyebrow}
      </p>
      <h2 class="text-3xl lg:text-4xl font-medium mb-6 text-[#0b1530] leading-tight tracking-tight">
        {vendorsPageFull.vendorReality.headline}
      </h2>
      <p class="text-lg text-[#636562] mb-8 leading-relaxed">
        {vendorsPageFull.vendorReality.description}
      </p>
      
      <ul class="space-y-4 mb-8">
        {vendorsPageFull.vendorReality.challenges.map((challenge) => (
          <li class="flex items-center gap-3">
            <div class="w-1.5 h-1.5 rounded-full bg-slate-300"></div>
            <span class="text-[#636562] leading-relaxed">{challenge}</span>
          </li>
        ))}
      </ul>

      <div class="space-y-2 mb-8">
        <p class="text-xl font-bold text-[#0b1530]">{vendorsPageFull.vendorReality.callout1}</p>
      </div>

      <p class="text-[#636562] leading-relaxed">
        {vendorsPageFull.vendorReality.callout2}
      </p>
    </div>
  </section>

  <!-- Horizontal Separator -->
  <hr class="border-0 h-px bg-gray-200" />

  <!-- What VetPulse Unlocks -->
  <section class="py-20 lg:py-24 fade-in-section">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <div class="mb-16">
        <p class="text-[#0eb4b3] text-sm font-mono font-bold tracking-[0.15em] uppercase mb-6 flex items-center">
          <span class="w-2 h-2 bg-[#0eb4b3] inline-block mr-2"></span>
          {vendorsPageFull.unlocks.eyebrow}
        </p>
        <h2 class="text-3xl lg:text-4xl font-bold text-[#0b1530] leading-tight">
          {vendorsPageFull.unlocks.headline}
        </h2>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        {vendorsPageFull.unlocks.cards.map((card) => (
          <div class="bg-gray-50 border border-gray-200 p-8 rounded-lg">
            <h3 class="text-xl font-bold mb-4 text-navy-900">{card.title}</h3>
            <p class="text-[#636562] text-sm leading-relaxed">{card.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Horizontal Separator -->
  <hr class="border-0 h-px bg-gray-200" />

  <!-- GTM Fit -->
  <section class="py-20 lg:py-24 bg-white text-navy-900 fade-in-section">
    <div class="max-w-4xl mx-auto px-6 lg:px-8">
      <p class="text-[#0eb4b3] text-sm font-mono font-bold tracking-[0.15em] uppercase mb-6 flex items-center">
        <span class="w-2 h-2 bg-[#0eb4b3] inline-block mr-2"></span>
        {vendorsPageFull.gtmFit.eyebrow}
      </p>
      <h2 class="text-3xl lg:text-4xl font-bold mb-8 text-[#0b1530] leading-tight">
        {vendorsPageFull.gtmFit.headline}
      </h2>
      
      <div class="space-y-6">
        {vendorsPageFull.gtmFit.content.map((item) => (
          <p class="text-lg text-[#636562] leading-relaxed">
            {item.paragraph}
          </p>
        ))}
      </div>
    </div>
  </section>

  <!-- Horizontal Separator -->
  <hr class="border-0 h-px bg-gray-200" />

  <!-- Proof Section -->
  <section class="py-20 lg:py-24 bg-gray-50 text-navy-900 fade-in-section">
    <div class="max-w-4xl mx-auto px-6 lg:px-8">
      <p class="text-[#0eb4b3] text-sm font-mono font-bold tracking-[0.15em] uppercase mb-6 flex items-center">
        <span class="w-2 h-2 bg-[#0eb4b3] inline-block mr-2"></span>
        {vendorsPageFull.proof.eyebrow}
      </p>
      <h2 class="text-3xl lg:text-4xl font-bold mb-6 text-[#0b1530] leading-tight">
        {vendorsPageFull.proof.headline}
      </h2>
      <p class="text-lg text-[#636562] leading-relaxed">
        {vendorsPageFull.proof.description}
      </p>
    </div>
  </section>

  <!-- Horizontal Separator -->
  <hr class="border-0 h-px bg-gray-200" />

  <!-- CTA Section -->
  <section class="py-20 lg:py-24 bg-[#0b1530] fade-in-section">
    <div class="max-w-4xl mx-auto px-6 lg:px-8 text-center">
      <h2 class="text-3xl lg:text-4xl font-bold mb-6 text-white leading-tight">
        {vendorsPageFull.cta.headline}
      </h2>
      <p class="text-lg text-[#d4d4d5] mb-8 leading-relaxed">
        {vendorsPageFull.cta.description}
      </p>
      <a href="/contact" class="bg-[#0eb4b3] hover:bg-[#0ca5a4] text-white px-8 py-4 rounded-sm font-semibold text-base tracking-wide transition-all duration-200 inline-block">
        {vendorsPageFull.cta.buttonText}
      </a>
    </div>
  </section>

</Layout>

<style>
  html {
    scroll-behavior: smooth;
  }
  
  /* Hero section initial load animation */
  .hero-section {
    opacity: 0;
    animation: fadeInUp 0.8s ease-out forwards;
  }
  
  .hero-content {
    opacity: 0;
    animation: fadeInUp 0.8s ease-out 0.2s forwards;
  }
  
  .hero-visual {
    opacity: 0;
    animation: fadeInUp 0.8s ease-out 0.4s forwards;
  }
  
  /* Scroll-triggered fade-in for other sections */
  .fade-in-section {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.8s ease-out, transform 0.8s ease-out;
  }
  
  .fade-in-section.is-visible {
    opacity: 1;
    transform: translateY(0);
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  @keyframes scan {
    0% { transform: translateY(-100%); }
    100% { transform: translateY(250%); }
  }
  
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(5px); }
    to { opacity: 1; transform: translateY(0); }
  }
</style>

<script>
  // Intersection Observer for scroll-triggered animations
  document.addEventListener('DOMContentLoaded', () => {
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -100px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add('is-visible');
        }
      });
    }, observerOptions);

    // Observe all fade-in sections
    const fadeInSections = document.querySelectorAll('.fade-in-section');
    fadeInSections.forEach((section) => {
      observer.observe(section);
    });
  });
</script>
