---
import Layout from '../layouts/Layout.astro';
import { privacyPolicyPage } from '../config/content';
---

<Layout title="VetPulse | Privacy Policy">
  <main class="bg-gray-50 text-gray-900 py-12 md:py-16 hero-section">
    
    <!-- Content Container Box -->
    <div class="max-w-4xl mx-auto px-6 lg:px-8">
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8 md:p-12 lg:p-16 hero-content">
        
        <!-- Hero Section -->
        <section class="mb-16">
          <h1 class="text-4xl md:text-5xl font-semibold text-gray-900 tracking-tight mb-6 leading-tight">
            {privacyPolicyPage.hero.headline}
          </h1>
          <p class="text-sm font-mono tracking-wider text-gray-500 mb-8">
            {privacyPolicyPage.hero.effectiveDate}
          </p>
          <div class="space-y-6 text-base text-gray-600 leading-relaxed">
            {privacyPolicyPage.hero.intro.map((paragraph) => (
              <p>{paragraph}</p>
            ))}
          </div>
        </section>

        <!-- Divider -->
        <hr class="border-gray-200 my-12">

        <!-- Scope -->
        <section class="mb-12 fade-in-section">
          <h2 class="text-2xl font-semibold text-gray-900 tracking-tight mb-6">
            {privacyPolicyPage.scope.title}
          </h2>
          <p class="text-gray-600 mb-4 leading-relaxed">
            {privacyPolicyPage.scope.intro}
          </p>
          <ul class="list-disc pl-5 space-y-2 marker:text-[#0eb4b3]">
            {privacyPolicyPage.scope.items.map((item) => (
              <li class="text-gray-600">{item}</li>
            ))}
          </ul>
        </section>

        <!-- Divider -->
        <hr class="border-gray-200 my-12">

        <!-- What Data We Collect -->
        <section class="mb-12 fade-in-section">
          <h2 class="text-2xl font-semibold text-gray-900 tracking-tight mb-8">
            {privacyPolicyPage.dataCollection.title}
          </h2>
          
          {privacyPolicyPage.dataCollection.sections.map((section, index) => (
            <div class:list={[index > 0 && 'mt-8']}>
              <h3 class="text-lg font-medium text-gray-900 mb-4">{section.subtitle}</h3>
              {section.description && (
                <p class="text-gray-600 mb-4 leading-relaxed">{section.description}</p>
              )}
              <ul class="list-disc pl-5 space-y-2 mb-4 marker:text-[#0eb4b3]">
                {section.items.map((item) => (
                  <li class="text-gray-600">{item}</li>
                ))}
              </ul>
              {section.footer && (
                <div class="space-y-4">
                  {section.footer.map((paragraph) => (
                    <p class="text-gray-600 leading-relaxed">{paragraph}</p>
                  ))}
                </div>
              )}
            </div>
          ))}
        </section>

        <!-- Divider -->
        <hr class="border-gray-200 my-12">

        <!-- How We Use Data -->
        <section class="mb-12 fade-in-section">
          <h2 class="text-2xl font-semibold text-gray-900 tracking-tight mb-6">
            {privacyPolicyPage.dataUse.title}
          </h2>
          <p class="text-gray-600 mb-4 leading-relaxed">
            {privacyPolicyPage.dataUse.intro}
          </p>
          <ul class="list-disc pl-5 space-y-2 mb-6 marker:text-[#0eb4b3]">
            {privacyPolicyPage.dataUse.items.map((item) => (
              <li class="text-gray-600">{item}</li>
            ))}
          </ul>
          <p class="text-gray-600 leading-relaxed">
            {privacyPolicyPage.dataUse.footer}
          </p>
        </section>

        <!-- Divider -->
        <hr class="border-gray-200 my-12">

        <!-- Legal Basis for Processing (GDPR) -->
        <section class="mb-12 fade-in-section">
          <h2 class="text-2xl font-semibold text-gray-900 tracking-tight mb-6">
            {privacyPolicyPage.legalBasis.title}
          </h2>
          <p class="text-gray-600 mb-4 leading-relaxed">
            {privacyPolicyPage.legalBasis.intro}
          </p>
          <ul class="list-disc pl-5 space-y-2 mb-6 marker:text-[#0eb4b3]">
            {privacyPolicyPage.legalBasis.items.map((item) => (
              <li class="text-gray-600">{item}</li>
            ))}
          </ul>
          <p class="text-gray-600 leading-relaxed">
            {privacyPolicyPage.legalBasis.footer}
          </p>
        </section>

        <!-- Divider -->
        <hr class="border-gray-200 my-12">

        <!-- Data Protection and Security -->
        <section class="mb-12 fade-in-section">
          <h2 class="text-2xl font-semibold text-gray-900 tracking-tight mb-6">
            {privacyPolicyPage.dataProtection.title}
          </h2>
          <p class="text-gray-600 mb-4 leading-relaxed">
            {privacyPolicyPage.dataProtection.intro}
          </p>
          <ul class="list-disc pl-5 space-y-2 marker:text-[#0eb4b3]">
            {privacyPolicyPage.dataProtection.items.map((item) => (
              <li class="text-gray-600">{item}</li>
            ))}
          </ul>
        </section>

        <!-- Divider -->
        <hr class="border-gray-200 my-12">

        <!-- Data Retention -->
        <section class="mb-12 fade-in-section">
          <h2 class="text-2xl font-semibold text-gray-900 tracking-tight mb-6">
            {privacyPolicyPage.dataRetention.title}
          </h2>
          <p class="text-gray-600 mb-4 leading-relaxed">
            {privacyPolicyPage.dataRetention.intro}
          </p>
          <ul class="list-disc pl-5 space-y-2 marker:text-[#0eb4b3]">
            {privacyPolicyPage.dataRetention.items.map((item) => (
              <li class="text-gray-600">{item}</li>
            ))}
          </ul>
        </section>

        <!-- Divider -->
        <hr class="border-gray-200 my-12">

        <!-- Data Sharing -->
        <section class="mb-12 fade-in-section">
          <h2 class="text-2xl font-semibold text-gray-900 tracking-tight mb-6">
            {privacyPolicyPage.dataSharing.title}
          </h2>
          <p class="text-gray-600 mb-4 leading-relaxed">
            {privacyPolicyPage.dataSharing.intro}
          </p>
          <ul class="list-disc pl-5 space-y-2 mb-6 marker:text-[#0eb4b3]">
            {privacyPolicyPage.dataSharing.items.map((item) => (
              <li class="text-gray-600">{item}</li>
            ))}
          </ul>
          <p class="text-gray-600 leading-relaxed">
            {privacyPolicyPage.dataSharing.footer}
          </p>
        </section>

        <!-- Divider -->
        <hr class="border-gray-200 my-12">

        <!-- Your Rights -->
        <section class="mb-12 fade-in-section">
          <h2 class="text-2xl font-semibold text-gray-900 tracking-tight mb-6">
            {privacyPolicyPage.yourRights.title}
          </h2>
          <p class="text-gray-600 mb-4 leading-relaxed">
            {privacyPolicyPage.yourRights.intro}
          </p>
          <ul class="list-disc pl-5 space-y-2 mb-8 marker:text-[#0eb4b3]">
            {privacyPolicyPage.yourRights.items.map((item) => (
              <li class="text-gray-600">{item}</li>
            ))}
          </ul>
          
          <h3 class="text-lg font-medium text-gray-900 mb-4">
            {privacyPolicyPage.yourRights.exercise.subtitle}
          </h3>
          <p class="text-gray-600 mb-2 leading-relaxed">
            {privacyPolicyPage.yourRights.exercise.description}
            <a href={`mailto:${privacyPolicyPage.yourRights.exercise.email}`} 
               class="text-[#0eb4b3] hover:text-[#0c9a99] transition-colors font-medium">
              {privacyPolicyPage.yourRights.exercise.email}
            </a>
            {' '}{privacyPolicyPage.yourRights.exercise.requirements}
          </p>
          <ul class="list-disc pl-5 space-y-2 mb-6 marker:text-[#0eb4b3]">
            {privacyPolicyPage.yourRights.exercise.items.map((item) => (
              <li class="text-gray-600">{item}</li>
            ))}
          </ul>
          <p class="text-gray-600 leading-relaxed">
            {privacyPolicyPage.yourRights.exercise.footer}
          </p>
        </section>

        <!-- Divider -->
        <hr class="border-gray-200 my-12">

        <!-- Contact -->
        <section class="fade-in-section">
          <h2 class="text-2xl font-semibold text-gray-900 tracking-tight mb-4">
            {privacyPolicyPage.contact.title}
          </h2>
          <p class="text-gray-600 mb-4 leading-relaxed">
            {privacyPolicyPage.contact.description}
          </p>
          <a href={`mailto:${privacyPolicyPage.contact.email}`} 
             class="text-[#0eb4b3] font-medium hover:text-[#0c9a99] transition-colors">
            {privacyPolicyPage.contact.email}
          </a>
        </section>

      </div>
    </div>

  </main>
</Layout>

<style>
  html {
    scroll-behavior: smooth;
  }
  
  /* Hero section initial load animation */
  .hero-section {
    opacity: 0;
    animation: fadeInUp 0.8s ease-out forwards;
  }
  
  .hero-content {
    opacity: 0;
    animation: fadeInUp 0.8s ease-out 0.2s forwards;
  }
  
  /* Scroll-triggered fade-in for other sections */
  .fade-in-section {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.8s ease-out, transform 0.8s ease-out;
  }
  
  .fade-in-section.is-visible {
    opacity: 1;
    transform: translateY(0);
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<script>
  // Intersection Observer for scroll-triggered animations
  document.addEventListener('DOMContentLoaded', () => {
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -100px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add('is-visible');
        }
      });
    }, observerOptions);

    // Observe all fade-in sections
    const fadeInSections = document.querySelectorAll('.fade-in-section');
    fadeInSections.forEach((section) => {
      observer.observe(section);
    });
  });
</script>
