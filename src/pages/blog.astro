---
import Layout from '../layouts/Layout.astro';
import { siteConfig, blogPage } from '../config/content';

// Direct fetch with full debugging
const STRAPI_URL = import.meta.env.STRAPI_URL || 'http://localhost:1337';

console.log('==========================================');
console.log('BLOG PAGE DEBUG');
console.log('STRAPI_URL from env:', import.meta.env.STRAPI_URL);
console.log('Using STRAPI_URL:', STRAPI_URL);
console.log('==========================================');

let posts = [];
let errorMessage = '';

try {
  const url = `${STRAPI_URL}/api/posts?populate=*&sort=date:desc`;
  console.log('Fetching from:', url);
  
  const response = await fetch(url);
  console.log('Response status:', response.status, response.statusText);
  
  if (!response.ok) {
    throw new Error(`HTTP ${response.status}: ${response.statusText}`);
  }
  
  const json = await response.json();
  console.log('Response data:', JSON.stringify(json, null, 2));
  
  posts = json.data || [];
  console.log('Number of posts:', posts.length);
  
  if (posts.length > 0) {
    console.log('First post:', JSON.stringify(posts[0], null, 2));
  }
} catch (err) {
  console.error('FETCH ERROR:', err);
  errorMessage = err instanceof Error ? err.message : 'Unknown error occurred';
}

console.log('==========================================');

// Helper function
function getStrapiMedia(url: string | null | undefined): string {
  if (!url) return '';
  if (url.startsWith('http') || url.startsWith('//')) return url;
  return `${STRAPI_URL}${url}`;
}
---

<Layout title={`${siteConfig.name} - ${siteConfig.tagline}`}>
  
  <!-- Hero Section -->
  <section class="pt-24 pb-6 lg:pt-32 lg:pb-8 bg-white hero-section">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <div class="max-w-3xl hero-content">
        <p class="text-[#0eb4b3] text-sm font-mono font-bold tracking-[0.15em] uppercase mb-6 flex items-center">
          <span class="w-2 h-2 bg-[#0eb4b3] inline-block mr-2"></span>
          {blogPage.eyebrow}
        </p>
        <h1 class="text-3xl lg:text-4xl font-bold mb-4 text-[#0b1430]">
          {blogPage.headline}
        </h1>
        <p class="text-l text-[#636562] leading-relaxed">
          {blogPage.description}
        </p>
      </div>
    </div>
  </section>

  <!-- Separator -->
  <div class="max-w-7xl mx-auto px-6 lg:px-8 pb-12 lg:pb-16">
    <div class="border-t border-gray-200"></div>
  </div>

  <!-- Debug Info (remove after fixing) -->
  {errorMessage && (
    <div class="max-w-7xl mx-auto px-6 lg:px-8 mb-8">
      <div class="bg-red-50 border-l-4 border-red-500 p-4">
        <p class="text-red-700 font-bold">Error: {errorMessage}</p>
        <p class="text-red-600 text-sm mt-2">Check terminal for details</p>
      </div>
    </div>
  )}

  <!-- Articles Grid -->
  <section class="pb-20 lg:pb-32 bg-white fade-in-section">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      {posts.length === 0 ? (
        <div class="text-center py-12">
          <p class="text-gray-500 mb-4">No posts found</p>
          <div class="text-left max-w-2xl mx-auto bg-gray-50 p-6 rounded-lg text-sm">
            <p class="font-bold mb-2">Debug Info:</p>
            <p>STRAPI_URL: <code class="bg-gray-200 px-2 py-1 rounded">{STRAPI_URL}</code></p>
            <p class="mt-2">Posts count: <code class="bg-gray-200 px-2 py-1 rounded">{posts.length}</code></p>
            <p class="mt-2 text-gray-600">Check the terminal for detailed logs</p>
          </div>
        </div>
      ) : (
        <div class="grid md:grid-cols-3 gap-8">
          {posts.map((post: any, index: number) => {
            const attrs = post.attributes || post;
            
            // Skip if no attributes
            if (!attrs || !attrs.slug) {
              console.warn('Skipping post with missing data:', post);
              return null;
            }

            // ✅ UPDATED: Handle both Strapi v3 and v4 cover structures
            const coverUrl = attrs?.cover?.url || attrs?.cover?.data?.attributes?.url;
            const coverAlt = attrs?.cover?.alternativeText || attrs?.cover?.data?.attributes?.alternativeText || attrs?.title;
            const category = attrs?.category || 'Insights';
            const readTime = attrs?.readTime || '5 min read';

            return (
              <a 
                href={`/blog/${attrs.slug}`} 
                class="group cursor-pointer block article-card"
                style={`animation-delay: ${index * 0.1}s`}
              >
                <article>
                  <div class="bg-gray-100 border border-gray-200 rounded-lg mb-4 aspect-video flex items-center justify-center overflow-hidden">
                    {coverUrl ? (
                      <img 
                        src={getStrapiMedia(coverUrl)} 
                        alt={coverAlt} 
                        class="w-full h-full object-cover rounded-lg" 
                      />
                    ) : (
                      <span class="text-gray-400 text-xs font-mono tracking-wider uppercase">
                        ARTICLE_COVER
                      </span>
                    )}
                  </div>
                  
                  <div class="mb-3">
                    <p class="text-[#0eb4b3] text-xs font-mono tracking-wider uppercase">
                      {category} • {readTime}
                    </p>
                  </div>
                  
                  <h2 class="text-xl font-bold text-[#0b1430] mb-3 group-hover:text-[#0eb4b3] transition-colors">
                    {attrs.title}
                  </h2>
                  
                  <p class="text-gray-600 text-sm leading-relaxed mb-4">
                    {attrs.excerpt}
                  </p>
                  
                  <span class="text-[#0b1430] text-sm font-semibold border-b-2 border-[#0eb4b3] group-hover:text-[#0eb4b3] transition-colors inline-block">
                    Read Article
                  </span>
                </article>
              </a>
            );
          })}
        </div>
      )}
    </div>
  </section>

</Layout>

<style>
  html {
    scroll-behavior: smooth;
  }
  
  .hero-section {
    opacity: 0;
    animation: fadeInUp 0.8s ease-out forwards;
  }
  
  .hero-content {
    opacity: 0;
    animation: fadeInUp 0.8s ease-out 0.2s forwards;
  }
  
  .article-card {
    opacity: 0;
    animation: fadeInUp 0.6s ease-out forwards;
  }
  
  .fade-in-section {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.8s ease-out, transform 0.8s ease-out;
  }
  
  .fade-in-section.is-visible {
    opacity: 1;
    transform: translateY(0);
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -100px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add('is-visible');
        }
      });
    }, observerOptions);

    const fadeInSections = document.querySelectorAll('.fade-in-section');
    fadeInSections.forEach((section) => {
      observer.observe(section);
    });
  });
</script>
