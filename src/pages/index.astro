---
import Layout from '../layouts/Layout.astro';
import { 
  siteConfig,
  hero,
  challengeSection,
  dataArchitecture,
  operatorsPage,
  investorsPage,
  vendorsPage,
  engagementModel,
  caseStudies,
  aboutSection
} from '../config/content';
---

<Layout title={`${siteConfig.name} - ${siteConfig.tagline}`}>
  
  <!-- Hero Section (updated) -->
  <section class="pt-32 pb-20 lg:pt-32 lg:pb-32 bg-white hero-section">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-16 items-start">
        <!-- Left Column -->
        <div class="hero-content">
          <!-- Hero Content -->
          <p class="text-[#0eb4b3] text-sm font-mono font-bold tracking-[0.15em] uppercase mb-6">
            {hero.eyebrow}
          </p>
          <h1 class="text-5xl lg:text-6xl font-bold mb-6 text-[#0b1530] leading-tight" style="text-wrap: balance;">
            {hero.headline}
          </h1>
          <p class="text-lg text-[#676666] mb-6 max-w-xl">
            Custom veterinary intelligence for hiring, expansion, and<br />revenue decisions in fragmented US markets.
          </p>

          <!-- Organizations Section (now in left column) -->
          <div class="hero-cards">
            <p class="text-[13px] text-[#b1b0b1] font-mono font-bold uppercase tracking-wider mb-4">
              {hero.organizations.title}
            </p>
            <div class="space-y-0 border border-gray-200 rounded-lg overflow-hidden">
              <a href="#operators" class="block bg-white p-5 hover:bg-gray-50 transition-all duration-300 group border-b border-gray-200">
                <div class="flex items-start justify-between">
                  <div class="flex-1">
                    <h3 class="text-lg font-bold mb-1 text-[#0b1530] group-hover:text-[#0fb4b2] transition-colors">
                      Veterinary Operators & Networks
                    </h3>
                    <p class="text-[#909091] mb-1 text-sm leading-relaxed">
                      You run clinics. You need people, locations, and visibility.
                    </p>
                    <span class="text-xs font-mono tracking-wider text-[#0a1430] uppercase font-semibold">
                      REVIEW MY OPERATING MARKETS
                    </span>
                  </div>
                  <svg class="w-5 h-5 text-[#0fb4b2] opacity-0 group-hover:opacity-100 transition-opacity ml-4 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                  </svg>
                </div>
              </a>

              <a href="#investors" class="block bg-white p-5 hover:bg-gray-50 transition-all duration-300 group border-b border-gray-200">
                <div class="flex items-start justify-between">
                  <div class="flex-1">
                    <h3 class="text-lg font-bold mb-1 text-[#0b1530] group-hover:text-[#0fb4b2] transition-colors">
                      Private Equity & Owners
                    </h3>
                    <p class="text-[#909091] mb-1 text-sm leading-relaxed">
                      You allocate capital. You need clarity before committing it.
                    </p>
                    <span class="text-xs font-mono tracking-wider text-[#0a1430] uppercase font-semibold">
                      REVIEW MARKET INTELLIGENCE
                    </span>
                  </div>
                  <svg class="w-5 h-5 text-[#0fb4b2] opacity-0 group-hover:opacity-100 transition-opacity ml-4 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                  </svg>
                </div>
              </a>

              <a href="#vendors" class="block bg-white p-5 hover:bg-gray-50 transition-all duration-300 group">
                <div class="flex items-start justify-between">
                  <div class="flex-1">
                    <h3 class="text-lg font-bold mb-1 text-[#0b1530] group-hover:text-[#0fb4b2] transition-colors">
                      Vendors & Service Providers
                    </h3>
                    <p class="text-[#909091] mb-1 text-sm leading-relaxed">
                      You sell into vet practices. You need access and conversion.
                    </p>
                    <span class="text-xs font-mono tracking-wider text-[#0a1430] uppercase font-semibold">
                      REVIEW TERRITORY REALITY
                    </span>
                  </div>
                  <svg class="w-5 h-5 text-[#0fb4b2] opacity-0 group-hover:opacity-100 transition-opacity ml-4 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                  </svg>
                </div>
              </a>
            </div>
          </div>
        </div>
        
        <!-- Right Column: Dynamic Design (The Blue Box) -->
        <div class="hidden lg:block pt-12 hero-visual">
          <div class="relative w-full h-[640px] bg-[#050C1F] rounded-xl overflow-hidden shadow-2xl border border-slate-800/50 group select-none">
            
            <!-- Background Grid -->
            <div class="absolute inset-0" style="background-image: radial-gradient(#1e293b 1px, transparent 1px); background-size: 32px 32px; opacity: 0.3;"></div>
            
            <!-- Ambient Glows -->
            <div class="absolute top-0 right-0 w-[500px] h-[500px] bg-teal-500/10 rounded-full blur-[100px] -translate-y-1/2 translate-x-1/2"></div>
            <div class="absolute bottom-0 left-0 w-[400px] h-[400px] bg-indigo-600/10 rounded-full blur-[80px] translate-y-1/2 -translate-x-1/2"></div>

            <!-- Central Dynamic Visualization Container -->
            <div class="absolute inset-0 flex items-center justify-center">
              
              <!-- Abstract Map / Network Layer -->
              <div class="relative w-[480px] h-[480px]">
                
                <!-- Rotating Rings -->
                <div class="absolute inset-0 border border-slate-700/30 rounded-full animate-spin [animation-duration:30s]"></div>
                <div class="absolute inset-[40px] border border-slate-700/20 rounded-full animate-spin [animation-duration:20s] [animation-direction:reverse]"></div>
                <div class="absolute inset-[120px] border border-slate-700/10 rounded-full"></div>

                <!-- Data Nodes (Pulsing Dots) -->
                <div class="absolute top-1/4 left-1/4 w-2 h-2 bg-teal-400 rounded-full animate-pulse shadow-[0_0_10px_rgba(45,212,191,0.5)]"></div>
                <div class="absolute bottom-1/3 right-1/4 w-1.5 h-1.5 bg-indigo-400 rounded-full animate-pulse-slow"></div>
                <div class="absolute top-1/2 right-10 w-1.5 h-1.5 bg-sky-400 rounded-full animate-pulse"></div>
                <div class="absolute bottom-20 left-1/3 w-2 h-2 bg-white rounded-full shadow-[0_0_15px_rgba(255,255,255,0.6)]"></div>

                <!-- Connecting Lines (SVG) -->
                <svg class="absolute inset-0 w-full h-full pointer-events-none">
                  <defs>
                    <linearGradient id="lineGrad" x1="0%" y1="0%" x2="100%" y2="0%">
                      <stop offset="0%" stop-color="rgba(45, 212, 191, 0)"></stop>
                      <stop offset="50%" stop-color="rgba(45, 212, 191, 0.4)"></stop>
                      <stop offset="100%" stop-color="rgba(45, 212, 191, 0)"></stop>
                    </linearGradient>
                  </defs>
                  <path d="M120 120 Q 240 240 360 320" stroke="url(#lineGrad)" stroke-width="1" fill="none" class="animate-pulse"></path>
                  <path d="M360 160 Q 240 240 160 360" stroke="rgba(255,255,255,0.1)" stroke-width="1" fill="none"></path>
                  <path d="M240 240 L 400 240" stroke="rgba(255,255,255,0.1)" stroke-width="1" fill="none" stroke-dasharray="4 4"></path>
                </svg>

                <!-- Central Focus UI (Floating Cards) -->
                
                <!-- Card 1: Main Stats (Center) -->
                <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-64 bg-[#0F172A]/80 backdrop-blur-md border border-slate-700/50 rounded-lg p-5 shadow-2xl z-20 animate-float">
                  <div class="flex items-center justify-between mb-4">
                    <div class="flex items-center gap-2">
                      <div class="w-2 h-2 rounded-full bg-teal-400 shadow-[0_0_8px_rgba(45,212,191,0.8)]"></div>
                      <span class="text-[10px] font-mono text-slate-400 uppercase tracking-wider">Market Penetration</span>
                    </div>
                    <span class="text-xs font-semibold text-teal-400">+12.4%</span>
                  </div>
                  <!-- Bar Chart Visual -->
                  <div class="flex items-end justify-between h-16 gap-1.5">
                    <div class="w-full bg-slate-700/50 rounded-sm h-[40%] relative overflow-hidden group-hover:bg-slate-700/70 transition-colors">
                      <div class="absolute bottom-0 w-full bg-teal-500/80 h-full animate-[bounce_3s_infinite]"></div>
                    </div>
                    <div class="w-full bg-slate-700/50 rounded-sm h-[65%] relative overflow-hidden group-hover:bg-slate-700/70 transition-colors">
                      <div class="absolute bottom-0 w-full bg-teal-500/80 h-full animate-[bounce_4s_infinite]"></div>
                    </div>
                    <div class="w-full bg-slate-700/50 rounded-sm h-[50%] relative overflow-hidden group-hover:bg-slate-700/70 transition-colors">
                      <div class="absolute bottom-0 w-full bg-teal-500/80 h-full animate-[bounce_2.5s_infinite]"></div>
                    </div>
                    <div class="w-full bg-slate-700/50 rounded-sm h-[85%] relative overflow-hidden group-hover:bg-slate-700/70 transition-colors">
                      <div class="absolute bottom-0 w-full bg-teal-500/80 h-full animate-[bounce_3.5s_infinite]"></div>
                    </div>
                    <div class="w-full bg-slate-700/50 rounded-sm h-[60%] relative overflow-hidden group-hover:bg-slate-700/70 transition-colors">
                      <div class="absolute bottom-0 w-full bg-teal-500/80 h-full animate-[bounce_5s_infinite]"></div>
                    </div>
                  </div>
                </div>

                <!-- Card 2: Hiring Demand (Top Right) -->
                <div class="absolute -top-6 -right-12 w-48 bg-[#0F172A]/80 backdrop-blur-md border border-slate-700/50 rounded-lg p-4 shadow-xl z-10 animate-float-delayed">
                  <div class="flex flex-col gap-1 mb-3">
                    <span class="text-[10px] font-mono text-slate-400 uppercase tracking-wider">Hiring Demand</span>
                    <span class="text-xl font-medium text-white">High</span>
                  </div>
                  <div class="w-full bg-slate-800 rounded-full h-1.5 overflow-hidden">
                    <div class="bg-indigo-500 h-full rounded-full w-[75%] shadow-[0_0_10px_rgba(99,102,241,0.5)]"></div>
                  </div>
                  <div class="flex justify-between mt-2 text-[9px] text-slate-500 font-mono">
                    <span>NY</span>
                    <span>CA</span>
                    <span>TX</span>
                    <span>FL</span>
                  </div>
                </div>

                <!-- Card 3: Location Data (Bottom Left) -->
                <div class="absolute -bottom-2 -left-8 w-44 bg-[#0F172A]/80 backdrop-blur-md border border-slate-700/50 rounded-lg p-4 shadow-xl z-10 animate-float" style="animation-delay: 2s;">
                  <div class="flex items-start gap-3">
                    <div class="bg-slate-800/80 p-1.5 rounded-md text-teal-400">
                      <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                        <circle cx="12" cy="10" r="3"></circle>
                      </svg>
                    </div>
                    <div>
                      <div class="text-[10px] font-mono text-slate-400 uppercase mb-0.5">Clinic Density</div>
                      <div class="text-sm font-medium text-white">1,240 <span class="text-slate-500 text-[10px] ml-1">/ Region</span></div>
                    </div>
                  </div>
                </div>

              </div>
            </div>

            <!-- Overlay Gradient Scanline Effect -->
            <div class="absolute inset-0 pointer-events-none z-30 opacity-20">
              <div class="w-full h-[10%] bg-gradient-to-b from-transparent via-teal-400/30 to-transparent scan-line absolute top-0"></div>
            </div>

            <!-- Subtle Grid Overlay for Tech feel -->
            <div class="absolute inset-0 pointer-events-none" style="background-image: linear-gradient(0deg, transparent 24%, rgba(255, 255, 255, .03) 25%, rgba(255, 255, 255, .03) 26%, transparent 27%, transparent 74%, rgba(255, 255, 255, .03) 75%, rgba(255, 255, 255, .03) 76%, transparent 77%, transparent), linear-gradient(90deg, transparent 24%, rgba(255, 255, 255, .03) 25%, rgba(255, 255, 255, .03) 26%, transparent 27%, transparent 74%, rgba(255, 255, 255, .03) 75%, rgba(255, 255, 255, .03) 76%, transparent 77%, transparent); background-size: 60px 60px;"></div>

          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Horizontal Separator -->
  <hr class="border-0 h-px bg-gray-200" />

  <!-- Challenge Section -->
  <section class="py-12 lg:py-16" style="background-color: #0b1530;">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <div>
          <p class="text-xs font-mono tracking-[0.15em] uppercase mb-4 flex items-center" style="color: #0eb5b2;">
            <span class="w-2 h-2 inline-block mr-2" style="background-color: #0eb5b2;"></span>
            {challengeSection.eyebrow}
          </p>
          <h2 class="text-3xl lg:text-4xl font-bold mb-6 text-white">
            {challengeSection.headline}
          </h2>
          <p class="leading-relaxed mb-6 text-base" style="color: #a3a3a3;">
            {challengeSection.description}
          </p>
          <p class="text-white font-semibold leading-relaxed text-base">
            {challengeSection.callout}
          </p>
        </div>
        
        <!-- Separator -->
        <div class="relative">
          <div class="absolute left-0 -top-8 -bottom-8 w-0.5" style="background-color: #111a32;"></div>
          
          <div class="pl-10">
            <p class="font-mono tracking-wider uppercase mb-8" style="color: #0eb5b2; font-size: 0.85rem;">
              {challengeSection.stats.title}
            </p>
            <div class="space-y-10">
              <div class="flex items-start gap-6">
                <div class="text-4xl font-bold flex-shrink-0" style="color: #0eb5b2; min-width: 120px;">
                  ~30%
                </div>
                <p class="leading-relaxed pt-1" style="color: #a3a3a3; font-size: 0.9375rem; max-width: 280px;">
                  of "active" veterinarian licenses contain outdated contact info
                </p>
              </div>
              
              <div class="flex items-start gap-6">
                <div class="text-4xl font-bold flex-shrink-0" style="color: #0eb5b2; min-width: 120px;">
                  ~40%
                </div>
                <p class="leading-relaxed pt-1" style="color: #a3a3a3; font-size: 0.9375rem; max-width: 450px;">
                  of practice ownership records are misattributed<br>
                  to holding entities rather than operating<br>
                  practices
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Horizontal Separator -->
  <hr class="border-0 h-px bg-gray-200" />

  <!-- Data Architecture -->
  <section class="py-12 lg:py-16" style="background-color: #ffffff;">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <div class="max-w-3xl mb-16">
        <p class="text-xs font-mono tracking-[0.15em] uppercase mb-4 flex items-center" style="color: #0eb5b2;">
          <span class="w-2 h-2 inline-block mr-2" style="background-color: #0eb5b2;"></span>
          {dataArchitecture.eyebrow}
        </p>
        <h2 class="text-3xl lg:text-4xl font-bold mb-6" style="color: #0b1530;">
          {dataArchitecture.headline}
        </h2>
        <p class="text-base" style="color: #525253;">
          VetPulse builds a single source of truth by triangulating four independent data signals —<br>
          cross-validated, normalized, and continuously refreshed.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        {dataArchitecture.layers.map((layer) => (
          <div class="layer-card group p-8 rounded-lg transition-all duration-300" style="background-color: #f8f9fa; border: 1px solid #e5e7eb;">
            <p class="layer-label text-xs font-mono mb-4 transition-colors duration-300" style="color: #a3a3a3;">LAYER {layer.number}</p>
            <h3 class="text-xl font-bold mb-4" style="color: #0b1530;">{layer.title}</h3>
            <p class="text-sm leading-relaxed" style="color: #737272;">{layer.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Horizontal Separator -->
  <hr class="border-0 h-px bg-gray-200" />

  <!-- Use Cases -->
  <section class="bg-white">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <!-- Operators -->
      <div id="operators" class="py-16 lg:py-24">
        <div class="grid lg:grid-cols-2 gap-12 lg:gap-16">
          <div class="lg:sticky lg:top-32 lg:self-start">
            <p class="text-xs font-mono tracking-[0.15em] uppercase mb-4 flex items-center" style="color: #0eb5b2;">
              <span class="w-2 h-2 inline-block mr-2" style="background-color: #0eb5b2;"></span>
              {operatorsPage.eyebrow}
            </p>
            <h2 class="text-3xl lg:text-4xl font-bold mb-6" style="color: #0b1530;">{operatorsPage.headline}</h2>
            <p class="text-base mb-8 leading-relaxed" style="color: #676666;">{operatorsPage.description}</p>
            <a href="/contact" class="cta-button font-mono text-xs tracking-wider uppercase font-semibold px-6 py-3 rounded transition-all inline-block" style="background-color: #0b1530; color: white; min-width: 280px; text-align: center; text-decoration: none;">
              {operatorsPage.cta}
            </a>
          </div>
          <div class="space-y-12 lg:space-y-16">
            <p class="text-xs font-mono tracking-wider uppercase" style="color: #b1b0b1;">{operatorsPage.unlocksLabel}</p>
            
            {operatorsPage.benefits.map((benefit, index) => (
              <div>
                <h3 class="text-xl font-bold mb-3" style="color: #0b1530;">{benefit.title}</h3>
                <p class="text-sm leading-relaxed" style="color: #676666;">{benefit.description}</p>
                {index < operatorsPage.benefits.length - 1 && (
                  <div class="mt-12 lg:mt-16 border-t" style="border-color: #e5e7eb;"></div>
                )}
              </div>
            ))}
            
            <div class="border-l-4 pl-6 py-4 mt-12 lg:mt-16" style="border-color: #0eb5b2; background-color: #f8f9fa;">
              <p class="text-xs font-mono tracking-wider uppercase mb-2" style="color: #0eb5b2;">{operatorsPage.proof.label}</p>
              <p class="text-sm italic leading-relaxed" style="color: #525253;">"{operatorsPage.proof.quote}"</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Horizontal Separator -->
  <hr class="border-0 h-px bg-gray-200" />

  <section class="bg-white">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <!-- Investors -->
      <div id="investors" class="py-16 lg:py-24">
        <div class="grid lg:grid-cols-2 gap-12 lg:gap-16">
          <div class="lg:sticky lg:top-32 lg:self-start">
            <p class="text-xs font-mono tracking-[0.15em] uppercase mb-4 flex items-center" style="color: #0eb5b2;">
              <span class="w-2 h-2 inline-block mr-2" style="background-color: #0eb5b2;"></span>
              {investorsPage.eyebrow}
            </p>
            <h2 class="text-3xl lg:text-4xl font-bold mb-6" style="color: #0b1530;">{investorsPage.headline}</h2>
            <p class="text-base mb-8 leading-relaxed" style="color: #676666;">{investorsPage.description}</p>
            <a href="/contact" class="cta-button font-mono text-xs tracking-wider uppercase font-semibold px-6 py-3 rounded transition-all inline-block" style="background-color: #0b1530; color: white; min-width: 280px; text-align: center; text-decoration: none;">
              {investorsPage.cta}
            </a>
          </div>
          <div class="space-y-12 lg:space-y-16">
            <p class="text-xs font-mono tracking-wider uppercase" style="color: #b1b0b1;">{investorsPage.unlocksLabel}</p>
            
            {investorsPage.benefits.map((benefit, index) => (
              <div>
                <h3 class="text-xl font-bold mb-3" style="color: #0b1530;">{benefit.title}</h3>
                <p class="text-sm leading-relaxed" style="color: #676666;">{benefit.description}</p>
                {index < investorsPage.benefits.length - 1 && (
                  <div class="mt-12 lg:mt-16 border-t" style="border-color: #e5e7eb;"></div>
                )}
              </div>
            ))}
            
            <div class="border-l-4 pl-6 py-4 mt-12 lg:mt-16" style="border-color: #0eb5b2; background-color: #f8f9fa;">
              <p class="text-xs font-mono tracking-wider uppercase mb-2" style="color: #0eb5b2;">{investorsPage.proof.label}</p>
              <p class="text-sm italic leading-relaxed" style="color: #525253;">"{investorsPage.proof.quote}"</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Horizontal Separator -->
  <hr class="border-0 h-px bg-gray-200" />

  <section class="bg-white">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <!-- Vendors -->
      <div id="vendors" class="py-16 lg:py-24">
        <div class="grid lg:grid-cols-2 gap-12 lg:gap-16">
          <div class="lg:sticky lg:top-32 lg:self-start">
            <p class="text-xs font-mono tracking-[0.15em] uppercase mb-4 flex items-center" style="color: #0eb5b2;">
              <span class="w-2 h-2 inline-block mr-2" style="background-color: #0eb5b2;"></span>
              {vendorsPage.eyebrow}
            </p>
            <h2 class="text-3xl lg:text-4xl font-bold mb-6" style="color: #0b1530;">{vendorsPage.headline}</h2>
            <p class="text-base mb-8 leading-relaxed" style="color: #676666;">{vendorsPage.description}</p>
            <a href="/contact" class="cta-button font-mono text-xs tracking-wider uppercase font-semibold px-6 py-3 rounded transition-all inline-block" style="background-color: #0b1530; color: white; min-width: 280px; text-align: center; text-decoration: none;">
              {vendorsPage.cta}
            </a>
          </div>
          <div class="space-y-12 lg:space-y-16">
            <p class="text-xs font-mono tracking-wider uppercase" style="color: #b1b0b1;">{vendorsPage.unlocksLabel}</p>
            
            {vendorsPage.benefits.map((benefit, index) => (
              <div>
                <h3 class="text-xl font-bold mb-3" style="color: #0b1530;">{benefit.title}</h3>
                <p class="text-sm leading-relaxed" style="color: #676666;">{benefit.description}</p>
                {index < vendorsPage.benefits.length - 1 && (
                  <div class="mt-12 lg:mt-16 border-t" style="border-color: #e5e7eb;"></div>
                )}
              </div>
