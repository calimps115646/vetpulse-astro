---
import Layout from '../layouts/Layout.astro';
import { 
  siteConfig,
  hero,
  challengeSection,
  dataArchitecture,
  operatorsPage,
  investorsPage,
  vendorsPage,
  engagementModel,
  caseStudies,
  aboutSection
} from '../config/content';
---

<Layout title={`${siteConfig.name} - ${siteConfig.tagline}`}>
  
  <!-- Hero Section (inline) -->
  <section class="pt-32 pb-20 lg:pt-40 lg:pb-32">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <div class="max-w-5xl mx-auto text-center">
        <p class="text-cyan-400 text-xs font-mono tracking-[0.15em] uppercase mb-4 flex items-center justify-center gap-2">
          <span class="w-2 h-2 bg-cyan-500 rounded-full"></span>
          {hero.eyebrow}
        </p>
        <h1 class="text-5xl lg:text-7xl font-bold mb-6" style="text-wrap: balance;">
          {hero.headline}
        </h1>
        <p class="text-xl lg:text-2xl text-gray-400 max-w-3xl mx-auto mb-16">
          {hero.subheadline}
        </p>
      </div>

      <div class="max-w-6xl mx-auto">
        <p class="text-xs text-gray-500 uppercase tracking-wider mb-8 text-center">
          {hero.organizations.title}
        </p>
        <div class="grid md:grid-cols-3 gap-6">
          {hero.organizations.segments.map((segment) => (
            <div class="bg-linear-to-br from-navy-800/50 to-navy-900/50 border border-cyan-500/10 rounded-lg p-8 hover:border-cyan-500/30 transition-all duration-300 group">
              <h3 class="text-xl font-bold mb-4">{segment.title}</h3>
              <p class="text-gray-400 mb-8 text-sm leading-relaxed">{segment.description}</p>
              <button class="text-xs font-mono tracking-wider text-cyan-400 group-hover:text-cyan-600 transition-colors uppercase">
                {segment.cta}
              </button>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>
  
  <!-- Challenge Section -->
  <section class="py-20 lg:py-32 bg-navy-800">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <div>
          <p class="text-cyan-400 text-xs font-mono tracking-[0.15em] uppercase mb-4">
            <span class="w-1.5 h-1.5 bg-cyan-500 rounded-full inline-block mr-2"></span>
            {challengeSection.eyebrow}
          </p>
          <h2 class="text-4xl lg:text-5xl font-bold mb-6">
            {challengeSection.headline}
          </h2>
          <p class="text-gray-400 leading-relaxed mb-6">
            {challengeSection.description}
          </p>
          <p class="text-white font-semibold leading-relaxed">
            {challengeSection.callout}
          </p>
        </div>
        
        <div class="bg-linear-to-br from-navy-800/50 to-navy-900/50 border border-cyan-500/10 rounded-lg p-10">
          <p class="text-xs text-cyan-400 font-mono tracking-wider uppercase mb-8">
            {challengeSection.stats.title}
          </p>
          <div class="space-y-8">
            {challengeSection.stats.items.map((stat) => (
              <div>
                <div class="text-5xl font-bold text-cyan-400 mb-3">{stat.value}</div>
                <p class="text-gray-400 text-sm leading-relaxed">{stat.label}</p>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Data Architecture -->
  <section class="py-20 lg:py-32">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <div class="max-w-3xl mx-auto text-center mb-16">
        <p class="text-cyan-400 text-xs font-mono tracking-[0.15em] uppercase mb-4 flex items-center justify-center gap-2">
          <span class="w-1.5 h-1.5 bg-cyan-500 rounded-full"></span>
          {dataArchitecture.eyebrow}
        </p>
        <h2 class="text-4xl lg:text-5xl font-bold mb-6">
          {dataArchitecture.headline}
        </h2>
        <p class="text-gray-400 text-lg">
          {dataArchitecture.description}
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        {dataArchitecture.layers.map((layer) => (
          <div class="bg-navy-800/30 border border-cyan-500/10 p-8 rounded-lg hover:border-cyan-500/30 transition-all duration-300">
            <p class="text-xs text-cyan-400 font-mono mb-4">LAYER {layer.number}</p>
            <h3 class="text-xl font-bold mb-4">{layer.title}</h3>
            <p class="text-gray-400 text-sm leading-relaxed">{layer.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Use Cases -->
  <section class="py-20 lg:py-32 bg-navy-800">
    <div class="max-w-7xl mx-auto px-6 lg:px-8 space-y-32">
      <!-- Operators -->
      <div class="grid lg:grid-cols-2 gap-16">
        <div>
          <p class="text-cyan-400 text-xs font-mono tracking-[0.15em] uppercase mb-4">
            <span class="w-1.5 h-1.5 bg-cyan-500 rounded-full inline-block mr-2"></span>
            {operatorsPage.eyebrow}
          </p>
          <h2 class="text-3xl lg:text-4xl font-bold mb-6">{operatorsPage.headline}</h2>
          <p class="text-gray-400 mb-8 leading-relaxed">{operatorsPage.description}</p>
          <button class="bg-navy-800 hover:bg-navy-700 text-white border border-cyan-500/30 px-6 py-3 rounded-sm font-semibold text-sm transition-all">
            {operatorsPage.cta}
          </button>
        </div>
        <div class="space-y-8">
          {operatorsPage.benefits.map((benefit) => (
            <div>
              <h3 class="text-xl font-bold mb-3">{benefit.title}</h3>
              <p class="text-gray-400 text-sm leading-relaxed">{benefit.description}</p>
            </div>
          ))}
          <div class="border-l-4 border-cyan-500 pl-6 py-4 bg-navy-800/30">
            <p class="text-xs text-cyan-400 font-mono tracking-wider uppercase mb-2">{operatorsPage.proof.label}</p>
            <p class="text-sm text-gray-300 italic leading-relaxed">"{operatorsPage.proof.quote}"</p>
          </div>
        </div>
      </div>

      <!-- Investors -->
      <div class="grid lg:grid-cols-2 gap-16">
        <div>
          <p class="text-cyan-400 text-xs font-mono tracking-[0.15em] uppercase mb-4">
            <span class="w-1.5 h-1.5 bg-cyan-500 rounded-full inline-block mr-2"></span>
            {investorsPage.eyebrow}
          </p>
          <h2 class="text-3xl lg:text-4xl font-bold mb-6">{investorsPage.headline}</h2>
          <p class="text-gray-400 mb-8 leading-relaxed">{investorsPage.description}</p>
          <button class="bg-navy-800 hover:bg-navy-700 text-white border border-cyan-500/30 px-6 py-3 rounded-sm font-semibold text-sm transition-all">
            {investorsPage.cta}
          </button>
        </div>
        <div class="space-y-8">
          {investorsPage.benefits.map((benefit) => (
            <div>
              <h3 class="text-xl font-bold mb-3">{benefit.title}</h3>
              <p class="text-gray-400 text-sm leading-relaxed">{benefit.description}</p>
            </div>
          ))}
          <div class="border-l-4 border-cyan-500 pl-6 py-4 bg-navy-800/30">
            <p class="text-xs text-cyan-400 font-mono tracking-wider uppercase mb-2">{investorsPage.proof.label}</p>
            <p class="text-sm text-gray-300 italic leading-relaxed">"{investorsPage.proof.quote}"</p>
          </div>
        </div>
      </div>

      <!-- Vendors -->
      <div class="grid lg:grid-cols-2 gap-16">
        <div>
          <p class="text-cyan-400 text-xs font-mono tracking-[0.15em] uppercase mb-4">
            <span class="w-1.5 h-1.5 bg-cyan-500 rounded-full inline-block mr-2"></span>
            {vendorsPage.eyebrow}
          </p>
          <h2 class="text-3xl lg:text-4xl font-bold mb-6">{vendorsPage.headline}</h2>
          <p class="text-gray-400 mb-8 leading-relaxed">{vendorsPage.description}</p>
          <button class="bg-navy-800 hover:bg-navy-700 text-white border border-cyan-500/30 px-6 py-3 rounded-sm font-semibold text-sm transition-all">
            {vendorsPage.cta}
          </button>
        </div>
        <div class="space-y-8">
          {vendorsPage.benefits.map((benefit) => (
            <div>
              <h3 class="text-xl font-bold mb-3">{benefit.title}</h3>
              <p class="text-gray-400 text-sm leading-relaxed">{benefit.description}</p>
            </div>
          ))}
          <div class="border-l-4 border-cyan-500 pl-6 py-4 bg-navy-800/30">
            <p class="text-xs text-cyan-400 font-mono tracking-wider uppercase mb-2">{vendorsPage.proof.label}</p>
            <p class="text-sm text-gray-300 italic leading-relaxed">"{vendorsPage.proof.quote}"</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Engagement Model -->
  <section class="py-20 lg:py-32">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <div class="max-w-3xl mx-auto text-center mb-16">
        <p class="text-cyan-400 text-xs font-mono tracking-[0.15em] uppercase mb-4 flex items-center justify-center gap-2">
          <span class="w-1.5 h-1.5 bg-cyan-500 rounded-full"></span>
          {engagementModel.eyebrow}
        </p>
        <h2 class="text-4xl lg:text-5xl font-bold">{engagementModel.headline}</h2>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        {engagementModel.cards.map((card, index) => (
          <div class={index === 3 ? "bg-navy-800 border border-cyan-500/20 p-8 rounded-lg" : "bg-navy-800/30 border border-white/5 p-8 rounded-lg"}>
            <h3 class="text-lg font-bold mb-4">{card.title}</h3>
            <p class="text-gray-400 text-sm leading-relaxed">{card.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Case Studies -->
  <section class="py-20 lg:py-32 bg-white text-navy-900">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <div class="max-w-3xl mx-auto text-center mb-16">
        <p class="text-cyan-600 text-xs font-mono tracking-[0.15em] uppercase mb-4 flex items-center justify-center gap-2">
          <span class="w-1.5 h-1.5 bg-cyan-600 rounded-full"></span>
          {caseStudies.eyebrow}
        </p>
        <h2 class="text-4xl lg:text-5xl font-bold mb-6">{caseStudies.headline}</h2>
        <p class="text-gray-600 text-lg">{caseStudies.description}</p>
      </div>

      <div class="grid md:grid-cols-2 gap-8 max-w-5xl mx-auto">
        {caseStudies.examples.map((example) => (
          <div class="bg-gray-50 border border-gray-200 p-8 rounded-lg">
            <h3 class="text-xl font-bold mb-4">{example.title}</h3>
            <p class="text-gray-600 text-sm leading-relaxed">{example.stats}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- About Section (inline - 08 / WHO WE ARE) -->
  <section class="py-20 lg:py-32 bg-white text-navy-900">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <div class="max-w-4xl mx-auto text-center">
        <p class="text-cyan-600 text-xs font-mono tracking-[0.15em] uppercase mb-4 flex items-center justify-center gap-2">
          <span class="w-1.5 h-1.5 bg-cyan-600 rounded-full"></span>
          {aboutSection.eyebrow}
        </p>
        <h2 class="text-4xl lg:text-5xl font-bold mb-6">
          {aboutSection.headline}
        </h2>
        <p class="text-xl text-gray-600 mb-8 leading-relaxed">
          {aboutSection.description}
        </p>
        <p class="text-base text-gray-500 leading-relaxed">
          {aboutSection.subheadline}
        </p>
        
        <div class="flex items-center justify-center gap-8 mt-12">
          {aboutSection.pillars.map((pillar) => (
            <div class="flex items-center gap-2">
              <span class="text-cyan-600 text-xl">{pillar.icon}</span>
              <span class="text-xs font-mono tracking-wider uppercase text-gray-700">{pillar.label}</span>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

</Layout>
